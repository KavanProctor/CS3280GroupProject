<Window x:Class="CS3280GroupProject.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3280GroupProject.Main"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="Update items" Click="UpdateItems"/>
            <MenuItem Header="Select invoice" Click="SelectInvoice"/>
        </Menu>
        <GroupBox Width="Auto" Header="Invoice">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Right" Content="Invoice number"/>
                <TextBox x:Name="invoiceID" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Width="100" IsReadOnly="True" Text="TBD"/>

                <Label Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Right" Content="Invoice date"/>
                <DatePicker x:Name="invoiceDate" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Width="100"/>

                <GroupBox Grid.ColumnSpan="2" Grid.Row="2" Width="Auto" Header="Items">
                    <StackPanel x:Name="itemSection">
                        <DataGrid x:Name="invoiceItems" RowHeaderWidth="0" Height="150">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Item code" Binding="{Binding ItemCode}"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding ItemDesc}"/>
                                <DataGridTextColumn Header="Cost" Binding="{Binding Cost}"/>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Click="RemoveItem">Remove</Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <ComboBox x:Name="itemSelection" Grid.Column="0">
                            </ComboBox>
                            <Button x:Name="addItemButton" Grid.Column="1" Content="Add item"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <Label Grid.Column="0" Grid.Row="3" HorizontalContentAlignment="Right" Content="Total cost"/>
                <TextBox x:Name="invoiceCost" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Width="100" IsReadOnly="True"/>

                <Button Click="StartInvoice" Grid.Column="0" Grid.Row="4" Content="Create new"/>
                <Button x:Name="editButton" Click="EditInvoice" Grid.Column="1" Grid.Row="4" Content="Edit"/>
                <Button x:Name="saveButton" Click="SaveInvoice" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="5" Content="Save"/>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
