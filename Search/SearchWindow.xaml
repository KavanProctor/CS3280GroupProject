<Window x:Class="CS3280GroupProject.Search.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3280GroupProject.Search"
        mc:Ignorable="d"
        Title="Search Invoice" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="Update items" Click="UpdateItems"/>
            <MenuItem Header="Main Menu" Click="MainMenu"/>
        </Menu>
        <GroupBox Width="Auto" Header="Search">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Right" Content="Invoice number"/>
                <ComboBox x:Name="invoiceIDs" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Width="100" IsReadOnly="True" SelectionChanged="invoiceIDs_SelectionChanged"/>

                <Label Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Right" Content="Invoice date"/>
                <ComboBox x:Name="invoiceDates" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Width="100" IsReadOnly="True" SelectionChanged="invoiceDates_SelectionChanged"/>

                <Label Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Right" Content="Total cost"/>
                <ComboBox x:Name="invoiceCosts" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Width="100" IsReadOnly="True" SelectionChanged="invoiceCosts_SelectionChanged"/>

                <Button x:Name="btnClearFilers" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="3" Content="Clear Filters" Click="btnClearFilers_Click"/>

                <GroupBox Grid.ColumnSpan="2" Grid.Row="4" Width="Auto" Header="Invoices">
                    <StackPanel>
                        <DataGrid x:Name="invoices" Height="150">
                        </DataGrid>
                    </StackPanel>
                </GroupBox>

                <Button x:Name="btnSelect" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="5" Content="Select Invoice" Click="btnSelect_Click"/>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
