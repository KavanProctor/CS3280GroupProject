<Window x:Class="CS3280GroupProject.Search.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3280GroupProject.Search"
        mc:Ignorable="d"
        Title="Search Invoice" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="Update items" Click="UpdateItems"/>
            <MenuItem Header="Main Menu" Click="Main Menu"/>
        </Menu>
        <GroupBox Width="Auto" Header="Invoice">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Right" Content="Invoice number"/>
                <TextBox x:Name="invoiceID" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Width="100" IsReadOnly="True" Text="TBD"/>

                <Label Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Right" Content="Invoice date"/>
                <DatePicker x:Name="invoiceDate" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Width="100"/>

                <GroupBox Grid.ColumnSpan="2" Grid.Row="2" Width="Auto" Header="Items">
                    <StackPanel>
                        <DataGrid x:Name="invoiceItems" Height="150">
                        </DataGrid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <ComboBox x:Name="itemSelection" Grid.Column="0">
                            </ComboBox>
                            <Button x:Name="addItemButton" Grid.Column="1" Content="Add item"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <Label Grid.Column="0" Grid.Row="3" HorizontalContentAlignment="Right" Content="Total cost"/>
                <TextBox x:Name="invoiceCost" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Width="100" IsReadOnly="True"/>

                <Button Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="4" Content="Save"/>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
